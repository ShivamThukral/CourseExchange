<?xml version="1.0" encoding="utf-8"?>
<!-- the parent view -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:padding="00dp"
    android:background="@color/frame_background"
    android:orientation="vertical"
    android:verticalSpacing="00dp"
    android:horizontalSpacing="00dp">
    <!-- android:background="@color/frame_background" -->

    <!-- the innner view - provides the white rectangle
    <RelativeLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/frame" >-->

    <!-- the ImageView for the icon -->
    <ImageView android:id="@+id/gvIcon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:contentDescription="@string/icon_content_description"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:padding="-10dp"
        android:verticalSpacing="00dp"
        android:horizontalSpacing="00dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" />

    <!--  the TextView for the title -->
    <TextView android:id="@+id/gvTitle"
        android:layout_alignBottom="@id/gvIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingBottom="30dp"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="15sp" />

    <!--  </RelativeLayout>-->
    <!--android:textAppearance="@android:style/TextAppearance.Small"-->

</RelativeLayout>